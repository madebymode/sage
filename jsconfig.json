{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./resources",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES5",
    "jsx": "preserve",
    "paths": {
      "@fonts/*": ["fonts/*"],
      "@images/*": ["images/*"],
      "@scripts/*": ["scripts/*"],
      "@styles/*": ["styles/*"]
    },
    "types": ["@roots/bud", "@roots/sage"]
  },
  "include": ["./bud.config.mjs", "./resources/**/*"],
  "exclude": ["./public"]
}
